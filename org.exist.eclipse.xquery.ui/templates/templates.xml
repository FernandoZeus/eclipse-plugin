<?xml version="1.0" encoding="UTF-8"?>
<templates>
<template 
  context="xqueryUniversalTemplateContextType" 
  description="let - define a variable" 
  id="org.exist.eclipse.xquery.ui.templates.let" 
  name="let">let $$${var} := ${value}
${cursor}</template>
<template 
  context="xqueryUniversalTemplateContextType" 
  description="for - iterate over Collection" 
  id="org.exist.eclipse.xquery.ui.templates.for1" 
  name="for">for $$${obj} in $$${collection}
${cursor}</template>    
<template 
  context="xqueryUniversalTemplateContextType" 
  description="for - iterate over Collection and return the values" 
  id="org.exist.eclipse.xquery.ui.templates.for2" 
  name="forAndReturn">for $$${obj} in $$${collection}
  return $$${obj}${cursor}</template>
<template 
  context="xqueryUniversalTemplateContextType" 
  description="declare a new variable" 
  id="org.exist.eclipse.xquery.ui.templates.declare" 
  name="declare variable">declare variable $$${var} := ${value};
${cursor}</template>  
<template 
  context="xqueryUniversalTemplateContextType" 
  description="declare a new function" 
  id="org.exist.eclipse.xquery.ui.templates.function" 
  name="declare function">declare function ${name}($$${param1} as ${type}) as ${returnType} {
  ${cursor}
};</template>
<template 
  context="xqueryUniversalTemplateContextType" 
  description="declare a namespace" 
  id="org.exist.eclipse.xquery.ui.templates.namespace" 
  name="declare namespace">declare namespace ${prefix}='${uri}';
  ${cursor}</template>
</templates>
